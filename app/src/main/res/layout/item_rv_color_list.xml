<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/color_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_container_height"
        app:cardBackgroundColor="@color/default_color"
        app:cardCornerRadius="@dimen/color_container_corner_radius"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_color_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:paddingEnd="@dimen/horizontal_padding"
            android:paddingLeft="@dimen/horizontal_padding"
            android:paddingRight="@dimen/horizontal_padding"
            android:paddingStart="@dimen/horizontal_padding"
            android:textSize="@dimen/color_title_text_size"
            tools:text="Color Title"
            tools:textColor="@android:color/white"/>

    </android.support.v7.widget.CardView>
</FrameLayout>